 		main_r5fss0_core1_dma_memory_region: r5f-dma-memory@a3000000 {
 			compatible = "shared-dma-pool";
@@ -135,7 +135,7 @@
 		};
 
 		rtos_ipc_memory_region: ipc-memories@aa000000 {
-			reg = <0x00 0xaa000000 0x00 0x01c00000>;
